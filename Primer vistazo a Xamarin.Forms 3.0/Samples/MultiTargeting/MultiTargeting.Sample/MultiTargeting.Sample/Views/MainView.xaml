<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MultiTargeting.Sample.Views.MainView"
    xmlns:viewmodels="clr-namespace:MultiTargeting.Sample.ViewModels"
    Title="Multi-Targeting Sample">
    <ContentPage.BindingContext>
        <viewmodels:MainViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Button
                Text="Test"
                Command="{Binding SampleCommand}" />
            <Label
                Text="{Binding Result}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>