<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TestFastRenderers.Views.Templates.MonkeyItemTemplate">
    <ContentView.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Image 
                Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="2"
                Source="{Binding Photo}"
                Aspect="AspectFill"
                WidthRequest="100"/>
            <Label 
                Grid.Column="1"
                Grid.Row="0"
                Text="{Binding Name}"
                FontSize="Large"
                VerticalOptions="Center"/>
            <Label 
                Grid.Column="1"
                Grid.Row="1"
                Text="{Binding Location}"
                VerticalOptions="Center"/>
        </Grid>
    </ContentView.Content>
</ContentView>